{
  "authors": [ "Herbert-Moreno" ],
  "version": "0.1.0",

  "sources": [ "src/**" ],
  "output": "build",

  "targets" : {
    "Build-C3ml": {
      "type": "prepare",
      "script-dir": "./",
      "exec": [
        "python ./BuildDep.py version=0.1.0"
      ]
    },
    "Test-Perceptron": {
      "name": "Perceptron",
      "type": "executable",
      "sources": [ "test/Perceptron/**" ]
    },
    "Test-Image": {
      "c_sources": [ "./image_processing/stb_image.c", "./image_processing/stb_image_write.c" ],
      "features": [ "ACTIVE_IMAGE_PROCESSING" ],
      "type": "executable",
      "sources": [ "test/Image_Processing/**" ]
    }
  },

  "cpu": "generic",
  "opt": "O0"
}